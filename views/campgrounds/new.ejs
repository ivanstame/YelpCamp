<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a New Campground</h1>
        <div style="width:30%; margin: 25px auto;">
             <form action="/campgrounds" method="POST">
                 <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter campground" name="name">                 
                 </div>
                 <div class="form-group">
                    <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">                 
                 </div>
                 <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                 </div>
                 <div class="form-group">
                     <textarea class="form-control" rows="5" placeholder="campground description" name="description"></textarea>
                 </div>
                 <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                 </div>                            
            </form>
            <a href="/campgrounds">Go Back</a>  
        </div>

    </div>

</div>

<%- include("../partials/footer") %>

